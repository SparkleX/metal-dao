{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
		"outDir": "dist",
		"noImplicitAny": true,
		"declaration": true,
		"sourceMap": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
    },
    "include": [
		  "src/**/*", "jest.config.js"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}